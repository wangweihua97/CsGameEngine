<UserControl x:Class="CsGameEngine.WpfItem.MaterialItems.MatFloat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CsGameEngine.WpfItem.MaterialItems"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="330">
    <Canvas Background="#FFD8D8D8">
        <TextBlock x:Name="shaderName" Canvas.Left="8" TextWrapping="Wrap" Text="Name" Canvas.Top="1" Height="31" Width="234" FontSize="20"/>
        <Slider x:Name="sliderValue" Height="32" Width="288" Canvas.Left="20" Canvas.Top="53" ValueChanged="sliderValue_ValueChanged" Maximum="1" >
            <Slider.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Slider.BorderBrush>
        </Slider>
        <TextBlock x:Name="value" Canvas.Left="12" TextWrapping="Wrap" Text="0.88" Canvas.Top="98" Height="31" Width="234" FontSize="20"/>
    </Canvas>
</UserControl>
