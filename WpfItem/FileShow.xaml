<UserControl x:Class="CsGameEngine.WpfItem.FileShow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CsGameEngine.WpfItem"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100" MouseRightButtonDown="UserControl_MouseRightButtonDown">
    <Canvas VerticalAlignment="Top" HorizontalAlignment="Left" >
        <Image x:Name="img" Width="80" Height="80" HorizontalAlignment="Center" Canvas.Left="9" Canvas.Top="1" Source="file.png" RenderTransformOrigin="1.625,0.638" MouseDown="img_MouseDown" />
        <TextBox x:Name="fileName" HorizontalAlignment="Left" Height="22" TextWrapping="Wrap" Text="TextBox" Width="104" RenderTransformOrigin="0.506,2.409" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom" Background="#03FFFFFF" Foreground="#FF060606" VerticalAlignment="Top" Canvas.Left="-3" Canvas.Top="77"/>
    </Canvas>
</UserControl>
