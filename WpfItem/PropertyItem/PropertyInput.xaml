<UserControl x:Class="CsGameEngine.WpfItem.PropertyItem.PropertyInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CsGameEngine.WpfItem.PropertyItem"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="250">
    <Canvas Background="White">
        <TextBlock x:Name="name" Width="94" Height="28" Canvas.Left="10" Canvas.Top="4" Text="Name" FontSize="15" />
        <TextBox x:Name="input" Height="23" Canvas.Left="108" TextWrapping="Wrap" Text="" Canvas.Top="4" Width="141" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" LostFocus="input_LostFocus"/>
    </Canvas>
</UserControl>
